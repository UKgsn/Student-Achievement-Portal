<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Achievement Report</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add custom styles here if needed */
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h2 class="text-center mb-4">Student Achievement Report</h2>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Roll Number</th>
                                <th>Event Name</th>
                                <th>Event Date</th>
                                <th>Submission Date</th>
                                <th>Details</th>
                                <!-- Add more table headers as needed -->
                            </tr>
                        </thead>
                        <tbody>
                            <% report.forEach(function(student) { %>
                            <tr>
                                <td><%= student.ROLL %></td>
                                <td><%= student.eventName %></td>
                                <td><%= student.eventDate %></td>
                                <td><%= student.submissionDate %></td>
                                <td><a href="/display-achievement/<%- student.ROLL %>/<%- student.eventName %>" class="btn btn-primary btn-sm">Details</a></td>
                                <!-- Add more table cells for additional details -->
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <div class="text-center">
                    <a href="/admin_dashboard" class="btn btn-secondary">Go Back</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
